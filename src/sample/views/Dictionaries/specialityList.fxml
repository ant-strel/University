                        <TextField editable="false" fx:id="specialityId" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                        <TextField fx:id="specialityName" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

